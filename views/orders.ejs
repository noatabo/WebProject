<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/profile.css" rel="stylesheet">
    <link href="/css/sells.css" rel="stylesheet">
    <script src="https://d3js.org/d3.v6.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/7.8.4/d3.min.js"
        integrity="sha512-nfUlp2ZWPKWlnAH/OsMeAqRSYBxOdPYeBXwceyw6QqqZ7uTT/s5/eS1hMKphjVBouk0jf/JQ8ULVJRnEqSHkXA=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>

    <title>Profile</title>
</head>

<body>
    <header>
        <script>
            window.ordersData = <% - JSON.stringify(data) %>;
        </script>

    </header>
    <%- include('partials/_side',{User:User})%>
        <%- include('partials/_nav', {Email:locals.userName})%>
            <div class="infopanel">
                <div class="row xl-4 l-3 m-2  ml-8 s-1" id="sellsShowcase">
                    <% if (Items.length> 0) {%>
                        <% for(var i=0; i < Items.length; i++) {%>
                            <div class="card col-4 ml-8 me-3 mb-3 p-0" style="width: 20rem; height: 50%">
                                <img src="<%= Items[i].photo%>" class="card-img-top w-100 h-50" alt="">
                                <div class="card-body p-3">
                                    <p class="h3">
                                        <%= Items[i].name %>
                                    </p>
                                    <p class="card-text fs-5">
                                        <%= Items[i].artist %>, <%= Items[i].release %>
                                    </p>
                                    <ul>
                                        <li>
                                            Seller: <a class="link" href="/users/<%=Items[i].acceptedBidder%>">
                                                <%= listingsUsers.get(Items[i]._id.toString()).userName %>
                                            </a>
                                        </li>
                                        <li>
                                            Price : <%= Items[i].acceptedBid %> $
                                        </li>
                                        <li>
                                            Date : <%= (Items[i].acceptedBidDate.getUTCDate()) + '/' +
                                                (Items[i].acceptedBidDate.getUTCMonth()+1) + '/' +
                                                Items[i].acceptedBidDate.getUTCFullYear()%>
                                        </li>
                                    </ul>

                                    <small class="text-muted d-block m-1">Listing Id: <%= Items[i]._id %> </small>

                                </div>
                            </div>
                            <% }%>
                                <%}%>
                </div>
                <div id="my_dataviz">
                    <span>Orders</span>
                </div>
            </div>
            <script src='/scripts/orders.js'></script>
</body>

</html>