<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/users.css" rel="stylesheet">

    <title>Users</title>
</head>

<body>
    <%= console.log("locals email "+Items.listings) %>
<%- include('partials/_nav', {Email:locals.userName})%>
<%- include('partials/_adminSide', {Email:locals.userName, ActiveListings: Items.listings.length, userAmount:usersAmount, ArchivedListings:closedListingsAmount})%>
<div class=" cardscontainer row xl-4 l-3 m-2 s-1" id="listingsShowcase">
        <% if (Items.listings.length> 0) {%>
            <% for(var i=0; i < Items.listings.length; i++) {%>
                <div class="card col-4 me-3 mb-3 p-0" style="width: 20rem; height: 50%">
                    <img src="<%= Items.listings[i].photo%>" class="card-img-top w-100 h-50" alt="">
                    <div class="card-body p-3">
                        <p class="h3">
                            <%= Items.listings[i].name %>
                        </p>
                        <p class="card-text fs-5">
                            <%= Items.listings[i].artist %>, <%= Items.listings[i].release %>
                        </p>
                        <ul>
                            <li>
                                Listed By <a class="link" href="/users/<%=Items.listings[i].listedBy %>">
                                    <%= listingsUsers.get(Items.listings[i]._id.toString()).userName %>
                                </a>
                            </li>
                            <li>
                                Last Bid : <%= Items.listings[i].lastBid %> $
                            </li>
                        </ul>
                        <a class="btn btn-primary fw-bold" href=<%="/listings/listing/" +Items.listings[i].id%>>More
                            Info</a>

                        <small class="text-muted d-block m-1">Listing Id: <%= Items.listings[i].id %> </small>
                        <%if(Admin){%>
                            <button class="button btn btn-danger"
                                onclick="handleDelete('<%=Items.listings[i].id%>')">Delete Listing</button>
                            <%}%>
                    </div>
                </div>
                <%}%>
                    <%}%>
                        </ul>

                        </div>

                        <script src="/scripts/users.js"></script>
</body>

</html>